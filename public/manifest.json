{
  "manifest_version": 3,
  "name": "YaSpotify",
  "description": "Yandex music spotify integration",
  "version": "1.0.0",
  "action": {},
  "content_scripts": [
    {
      "matches": ["https://music.yandex.ru/*"],
      "js": ["content.js"]
    },
    {
      "matches": ["https://music.yandex.ru/*"],
      "js": ["inject.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icon-128-default.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "spotify.svg",
        "spotify-red.svg",
        "spotify-green.svg",
        "spotify-white.svg",
        "script.js"
      ],
      "matches": ["https://music.yandex.ru/*"]
    }
  ],
  "permissions": ["identity", "storage", "tabs"],
  "host_permissions": ["https://accounts.spotify.com/*"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
